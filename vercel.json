{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm build",
  "framework": "nextjs",
  "crons": [
    {
      "path": "/api/cron/ultra-active-scan",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/medium-volatility-scan",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/full-market-scan",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/performance-review",
      "schedule": "0 */4 * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["iad1"],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        }
      ]
    }
  ]
}
