{
  "compilerOptions": {
    // Modern JavaScript & TypeScript
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2022", "WebWorker"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",

    // Strict Type Checking (Production-Ready Balance)
    // âš¡ Pragmatic strict mode - prevents critical errors, allows practical code
    "strict": true,
    "strictNullChecks": false,        // ðŸ”§ Too strict for 1028 undefined checks
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false, // ðŸ”§ Class properties can be initialized later
    "noImplicitThis": true,
    "noImplicitAny": false,           // ðŸ”§ 52 implicit any errors - practical for rapid development
    "noImplicitReturns": false,       // ðŸ”§ Implicit returns are common in React
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false, // ðŸ”§ Array access doesn't need | undefined
    "noUnusedLocals": false,          // ðŸ”§ Warnings only, not errors
    "noUnusedParameters": false,      // ðŸ”§ Unused params common in callbacks

    // Module Resolution
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,

    // Output
    "noEmit": true,
    "incremental": true,

    // Next.js specific
    "plugins": [
      {
        "name": "next"
      }
    ],

    // Path Mapping
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/types/*": ["./src/types/*"],
      "@/services/*": ["./src/services-45backend/*"],
      "@/utils/*": ["./src/utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "apps",
    "scripts",
    "test-scripts",
    "_themes_archive",
    "**/*backup*.ts",
    "**/*.test.ts",
    "**/*.test.tsx",              // ðŸ”§ Exclude test files
    "**/*.spec.ts",
    "**/*.spec.tsx",              // ðŸ”§ Exclude spec files
    "**/__tests__/**",            // ðŸ”§ Exclude __tests__ folders
    "**/test/**",                 // ðŸ”§ Exclude test folders
    "coverage"
  ]
}
