# ============================================
# AILYDIAN SIGNAL - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# ============================================
# CORE CONFIGURATION
# ============================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# AI SERVICES
# ============================================
# Groq AI (Turkish NLP Analysis)
# Get your key from: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# Anthropic Claude (AI Assistant)
# Get your key from: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Azure OpenAI (Market Analysis)
# Get from Azure Portal
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=your_azure_endpoint_here
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name_here

# ============================================
# MARKET DATA APIS
# ============================================
# Binance (Free - no key required for public endpoints)
# Rate limits apply

# CoinGecko (Optional - Free tier available)
# Get from: https://www.coinglass.com/api
COINGLASS_API_KEY=your_coinglass_key_here

# Alpha Vantage (Traditional Markets)
# Get from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# MetalpriceAPI (Precious Metals)
# Get from: https://metalpriceapi.com
METALPRICEAPI_KEY=your_metalpriceapi_key_here

# RapidAPI (Harem AltÄ±n - Turkish Gold Prices)
# Get from: https://rapidapi.com
RAPIDAPI_KEY=your_rapidapi_key_here

# ============================================
# ON-CHAIN DATA
# ============================================
# Whale Alert (Large Transactions)
# Get from: https://whale-alert.io
WHALE_ALERT_API_KEY=your_whale_alert_key_here

# ============================================
# NEWS & SENTIMENT
# ============================================
# CryptoPanic (Crypto News)
# Get from: https://cryptopanic.com/developers/api/
CRYPTOPANIC_API_KEY=your_cryptopanic_key_here

# NewsAPI (General News)
# Get from: https://newsapi.org
NEWSAPI_KEY=your_newsapi_key_here

# ============================================
# NOTIFICATIONS
# ============================================
# Telegram Bot
# Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ALLOWED_CHAT_IDS=your_chat_id_here

# Web Push Notifications (VAPID Keys)
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:your-email@example.com

# ============================================
# DATABASE (Required for Production)
# ============================================
# PostgreSQL / Supabase
# Example: postgresql://user:password@host:5432/database
DATABASE_URL=postgresql://user:password@localhost:5432/ailydian

# ============================================
# CACHING & QUEUE
# ============================================
# Redis / Upstash (Required for Production)
# Get from: https://upstash.com
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# ============================================
# MONITORING & LOGGING
# ============================================
# Sentry (Error Tracking)
# Get from: https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# Enable/disable personal authentication
NEXT_PUBLIC_PERSONAL_AUTH_ENABLED=false

# JWT Secret (Generate a random string)
# Example: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here

# Session Secret
SESSION_SECRET=your_session_secret_here

# ============================================
# RATE LIMITING
# ============================================
# Requests per minute (default: 600)
RATE_LIMIT_MAX_REQUESTS=600
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# DEPLOYMENT (Vercel)
# ============================================
VERCEL_URL=
VERCEL_ENV=development

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_AI_ASSISTANT=true
NEXT_PUBLIC_ENABLE_AUTO_TRADING=false

# ============================================
# PYTHON SERVICES (Backend Microservices)
# ============================================
# Python service ports (if running locally)
PYTHON_SERVICE_BASE_URL=http://localhost:5000
TALIB_SERVICE_PORT=5001
SIGNAL_GENERATOR_PORT=5004
CONFIRMATION_ENGINE_PORT=5019

# ============================================
# DEVELOPMENT TOOLS
# ============================================
# Analyze bundle size
ANALYZE=false

# Skip telemetry
NEXT_TELEMETRY_DISABLED=1
