'use client';

/**
 * üåê OMNIPOTENT FUTURES MATRIX - MARKET CORRELATION DASHBOARD
 * Complete backend-frontend integration with 50+ coin analysis
 */

import { useState, useEffect } from 'react';
import Link from 'next/link';
import '../globals.css';
import { Icons } from '@/components/Icons';

interface CorrelationData {
  symbol: string;
  price: number;
  change24h: number;
  omnipotentScore: number;
  marketPhase: string;
  trend: string;
  volumeProfile: string;
  fundingBias: string;
  liquidationRisk: number;
  volatility: number;
  btcCorrelation: number;
  signal: string;
  confidence: number;
}

interface MarketOverview {
  totalCoins: number;
  avgOmnipotentScore: number;
  bullishCount: number;
  bearishCount: number;
  neutralCount: number;
  avgVolatility: string;
  highConfidenceSignals: number;
  marketPhaseDistribution: {
    ACCUMULATION: number;
    MARKUP: number;
    DISTRIBUTION: number;
    MARKDOWN: number;
  };
}

export default function MarketCorrelationPage() {
  const [correlations, setCorrelations] = useState<CorrelationData[]>([]);
  const [marketOverview, setMarketOverview] = useState<MarketOverview | null>(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const [countdown, setCountdown] = useState(60);
  const [filterSignal, setFilterSignal] = useState<string>('ALL');
  const [sortBy, setSortBy] = useState<'score' | 'confidence' | 'risk'>('score');

  const fetchData = async () => {
    try {
      setLoading(true);
      const response = await fetch('/api/market-correlation');
      const result = await response.json();

      if (result.success) {
        setCorrelations(result.data.correlations);
        setMarketOverview(result.data.marketOverview);
        setError(null);
      } else {
        setError(result.error || 'Failed to fetch data');
      }
    } catch (err: any) {
      setError(err.message || 'Network error');
    } finally {
      setLoading(false);
    }
  };

  useEffect(() => {
    fetchData();
    const interval = setInterval(() => {
      setCountdown((prev) => {
        if (prev <= 1) {
          fetchData();
          return 60;
        }
        return prev - 1;
      });
    }, 1000);
    return () => clearInterval(interval);
  }, []);

  // Filter and sort
  const filteredCorrelations = correlations
    .filter((c) => filterSignal === 'ALL' || c.signal === filterSignal)
    .sort((a, b) => {
      if (sortBy === 'score') return b.omnipotentScore - a.omnipotentScore;
      if (sortBy === 'confidence') return b.confidence - a.confidence;
      if (sortBy === 'risk') return a.liquidationRisk - b.liquidationRisk;
      return 0;
    });

  const getSignalColor = (signal: string) => {
    if (signal === 'BUY') return '#00ff00';
    if (signal === 'SELL') return '#ff0000';
    if (signal === 'WAIT') return '#ffff00';
    return '#666';
  };

  const getPhaseColor = (phase: string) => {
    if (phase === 'MARKUP') return '#00ff00';
    if (phase === 'MARKDOWN') return '#ff0000';
    if (phase === 'ACCUMULATION') return '#00bfff';
    if (phase === 'DISTRIBUTION') return '#ff6600';
    return '#666';
  };

  if (error) {
    return (
      <div style={{ minHeight: '100vh', display: 'flex', alignItems: 'center', justifyContent: 'center', background: '#0a0a0a', color: '#ff0000', padding: '20px' }}>
        <div style={{ textAlign: 'center' }}>
          <h1 style={{ fontSize: '24px', marginBottom: '16px' }}>‚ùå Error Loading Data</h1>
          <p style={{ marginBottom: '20px' }}>{error}</p>
          <button onClick={fetchData} style={{ padding: '12px 24px', background: '#ffffff', color: '#000', border: 'none', borderRadius: '6px', cursor: 'pointer', fontWeight: '600' }}>
            Retry
          </button>
          <Link href="/" style={{ display: 'block', marginTop: '20px', color: '#00bfff', textDecoration: 'none' }}>
            ‚Üê Back to Home
          </Link>
        </div>
      </div>
    );
  }

  return (
    <div style={{ minHeight: '100vh', background: '#0a0a0a', color: '#ffffff', padding: '24px' }}>
      {/* Header */}
      <div style={{ marginBottom: '24px', borderBottom: '1px solid #222', paddingBottom: '16px' }}>
        <div style={{ display: 'flex', justifyContent: 'space-between', alignItems: 'center', flexWrap: 'wrap', gap: '16px' }}>
          <div>
            <h1 style={{ fontSize: '28px', fontWeight: '700', marginBottom: '8px', color: '#00ff00' }}>
              üåê OMNIPOTENT FUTURES MATRIX
            </h1>
            <p style={{ color: '#666', fontSize: '13px' }}>Market Correlation Dashboard - Real-time 50+ Coin Analysis</p>
          </div>
          <div style={{ display: 'flex', gap: '12px', alignItems: 'center' }}>
            <div style={{ textAlign: 'right' }}>
              <div style={{ fontSize: '11px', color: '#666' }}>Auto-refresh</div>
              <div style={{ fontSize: '18px', fontWeight: '700', color: '#00ff00' }}>{countdown}s</div>
            </div>
            <Link href="/" style={{ padding: '10px 20px', background: '#ffffff', color: '#000', borderRadius: '6px', textDecoration: 'none', fontWeight: '600', fontSize: '14px' }}>
              ‚Üê Ana Sayfa
            </Link>
          </div>
        </div>
      </div>

      {loading && !marketOverview ? (
        <div style={{ textAlign: 'center', padding: '100px 20px', color: '#666' }}>
          <div style={{ fontSize: '48px', marginBottom: '20px' }}>‚è≥</div>
          <div style={{ fontSize: '18px' }}>Analyzing 50+ correlations with Omnipotent Matrix...</div>
        </div>
      ) : (
        <>
          {/* Market Overview */}
          {marketOverview && (
            <div style={{ marginBottom: '24px', background: '#111', border: '1px solid #333', borderRadius: '10px', padding: '24px' }}>
              <h2 style={{ fontSize: '18px', marginBottom: '20px', color: '#00bfff', display: 'flex', alignItems: 'center', gap: '8px' }}>
                <span>üìä</span> MARKET OVERVIEW
              </h2>
              <div style={{ display: 'grid', gridTemplateColumns: 'repeat(auto-fit, minmax(180px, 1fr))', gap: '16px', marginBottom: '24px' }}>
                <div style={{ background: '#0a0a0a', padding: '16px', borderRadius: '8px', border: '1px solid #222' }}>
                  <div style={{ color: '#666', fontSize: '11px', marginBottom: '8px' }}>Total Analyzed</div>
                  <div style={{ fontSize: '28px', fontWeight: '700' }}>{marketOverview.totalCoins}</div>
                </div>
                <div style={{ background: '#0a0a0a', padding: '16px', borderRadius: '8px', border: '1px solid #222' }}>
                  <div style={{ color: '#666', fontSize: '11px', marginBottom: '8px' }}>Avg Matrix Score</div>
                  <div style={{ fontSize: '28px', fontWeight: '700', color: '#00bfff' }}>{marketOverview.avgOmnipotentScore}<span style={{ fontSize: '16px', color: '#666' }}>/100</span></div>
                </div>
                <div style={{ background: '#0a0a0a', padding: '16px', borderRadius: '8px', border: '1px solid #00ff00' }}>
                  <div style={{ color: '#00ff00', fontSize: '11px', marginBottom: '8px' }}>Bullish Signals</div>
                  <div style={{ fontSize: '28px', fontWeight: '700', color: '#00ff00' }}>{marketOverview.bullishCount}</div>
                </div>
                <div style={{ background: '#0a0a0a', padding: '16px', borderRadius: '8px', border: '1px solid #ff0000' }}>
                  <div style={{ color: '#ff0000', fontSize: '11px', marginBottom: '8px' }}>Bearish Signals</div>
                  <div style={{ fontSize: '28px', fontWeight: '700', color: '#ff0000' }}>{marketOverview.bearishCount}</div>
                </div>
                <div style={{ background: '#0a0a0a', padding: '16px', borderRadius: '8px', border: '1px solid #222' }}>
                  <div style={{ color: '#666', fontSize: '11px', marginBottom: '8px' }}>Avg Volatility</div>
                  <div style={{ fontSize: '28px', fontWeight: '700', color: '#ffff00' }}>{marketOverview.avgVolatility}%</div>
                </div>
                <div style={{ background: '#0a0a0a', padding: '16px', borderRadius: '8px', border: '1px solid #ff00ff' }}>
                  <div style={{ color: '#ff00ff', fontSize: '11px', marginBottom: '8px' }}>High Confidence</div>
                  <div style={{ fontSize: '28px', fontWeight: '700', color: '#ff00ff' }}>{marketOverview.highConfidenceSignals}</div>
                </div>
              </div>

              {/* Market Phase Distribution */}
              <div style={{ background: '#0a0a0a', padding: '20px', borderRadius: '8px', border: '1px solid #222' }}>
                <div style={{ fontSize: '13px', color: '#666', marginBottom: '16px', fontWeight: '600' }}>MARKET PHASE DISTRIBUTION</div>
                <div style={{ display: 'grid', gridTemplateColumns: 'repeat(auto-fit, minmax(140px, 1fr))', gap: '12px' }}>
                  <div style={{ textAlign: 'center', padding: '14px', background: 'rgba(0, 191, 255, 0.1)', border: '2px solid #00bfff', borderRadius: '6px' }}>
                    <div style={{ fontSize: '24px', fontWeight: '700', color: '#00bfff' }}>{marketOverview.marketPhaseDistribution.ACCUMULATION}</div>
                    <div style={{ fontSize: '10px', color: '#00bfff', marginTop: '4px', fontWeight: '600' }}>ACCUMULATION</div>
                  </div>
                  <div style={{ textAlign: 'center', padding: '14px', background: 'rgba(0, 255, 0, 0.1)', border: '2px solid #00ff00', borderRadius: '6px' }}>
                    <div style={{ fontSize: '24px', fontWeight: '700', color: '#00ff00' }}>{marketOverview.marketPhaseDistribution.MARKUP}</div>
                    <div style={{ fontSize: '10px', color: '#00ff00', marginTop: '4px', fontWeight: '600' }}>MARKUP</div>
                  </div>
                  <div style={{ textAlign: 'center', padding: '14px', background: 'rgba(255, 102, 0, 0.1)', border: '2px solid #ff6600', borderRadius: '6px' }}>
                    <div style={{ fontSize: '24px', fontWeight: '700', color: '#ff6600' }}>{marketOverview.marketPhaseDistribution.DISTRIBUTION}</div>
                    <div style={{ fontSize: '10px', color: '#ff6600', marginTop: '4px', fontWeight: '600' }}>DISTRIBUTION</div>
                  </div>
                  <div style={{ textAlign: 'center', padding: '14px', background: 'rgba(255, 0, 0, 0.1)', border: '2px solid #ff0000', borderRadius: '6px' }}>
                    <div style={{ fontSize: '24px', fontWeight: '700', color: '#ff0000' }}>{marketOverview.marketPhaseDistribution.MARKDOWN}</div>
                    <div style={{ fontSize: '10px', color: '#ff0000', marginTop: '4px', fontWeight: '600' }}>MARKDOWN</div>
                  </div>
                </div>
              </div>
            </div>
          )}

          {/* Filters */}
          <div style={{ marginBottom: '20px', display: 'flex', gap: '12px', flexWrap: 'wrap', alignItems: 'center', padding: '16px', background: '#111', borderRadius: '8px', border: '1px solid #333' }}>
            <div style={{ display: 'flex', gap: '8px', alignItems: 'center' }}>
              <span style={{ color: '#666', fontSize: '12px', fontWeight: '600' }}>SIGNAL:</span>
              {['ALL', 'BUY', 'SELL', 'WAIT', 'NEUTRAL'].map((s) => (
                <button
                  key={s}
                  onClick={() => setFilterSignal(s)}
                  style={{
                    background: filterSignal === s ? '#ffffff' : 'transparent',
                    color: filterSignal === s ? '#000' : '#999',
                    border: `1px solid ${filterSignal === s ? '#ffffff' : '#444'}`,
                    padding: '6px 14px',
                    borderRadius: '4px',
                    cursor: 'pointer',
                    fontSize: '11px',
                    fontWeight: '600',
                    transition: 'all 0.2s',
                  }}
                >
                  {s}
                </button>
              ))}
            </div>

            <div style={{ marginLeft: 'auto', display: 'flex', gap: '8px', alignItems: 'center' }}>
              <span style={{ color: '#666', fontSize: '12px', fontWeight: '600' }}>SORT:</span>
              {[
                { key: 'score', label: 'Matrix Score' },
                { key: 'confidence', label: 'Confidence' },
                { key: 'risk', label: 'Liq Risk' },
              ].map((s) => (
                <button
                  key={s.key}
                  onClick={() => setSortBy(s.key as any)}
                  style={{
                    background: sortBy === s.key ? '#ffffff' : 'transparent',
                    color: sortBy === s.key ? '#000' : '#999',
                    border: `1px solid ${sortBy === s.key ? '#ffffff' : '#444'}`,
                    padding: '6px 14px',
                    borderRadius: '4px',
                    cursor: 'pointer',
                    fontSize: '11px',
                    fontWeight: '600',
                    transition: 'all 0.2s',
                  }}
                >
                  {s.label}
                </button>
              ))}
            </div>
          </div>

          {/* Correlation Grid */}
          <div style={{ display: 'grid', gridTemplateColumns: 'repeat(auto-fill, minmax(280px, 1fr))', gap: '16px' }}>
            {filteredCorrelations.map((coin) => (
              <div
                key={coin.symbol}
                style={{
                  background: '#111',
                  border: `1px solid ${coin.signal === 'BUY' ? '#00ff00' : coin.signal === 'SELL' ? '#ff0000' : '#333'}`,
                  borderRadius: '10px',
                  padding: '16px',
                  cursor: 'pointer',
                  transition: 'all 0.2s',
                }}
                onMouseEnter={(e) => {
                  e.currentTarget.style.transform = 'translateY(-4px)';
                  e.currentTarget.style.boxShadow = `0 8px 20px ${coin.signal === 'BUY' ? 'rgba(0,255,0,0.3)' : coin.signal === 'SELL' ? 'rgba(255,0,0,0.3)' : 'rgba(255,255,255,0.1)'}`;
                }}
                onMouseLeave={(e) => {
                  e.currentTarget.style.transform = 'translateY(0)';
                  e.currentTarget.style.boxShadow = 'none';
                }}
              >
                {/* Symbol & Price */}
                <div style={{ display: 'flex', justifyContent: 'space-between', alignItems: 'flex-start', marginBottom: '12px' }}>
                  <div>
                    <div style={{ fontSize: '18px', fontWeight: '700', marginBottom: '4px' }}>
                      {coin.symbol.replace('USDT', '')}
                    </div>
                    <div style={{ fontSize: '13px', color: '#666', fontFamily: 'monospace' }}>
                      ${coin.price < 1 ? coin.price.toFixed(6) : coin.price.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}
                    </div>
                  </div>
                  <div style={{ textAlign: 'right' }}>
                    <div style={{ fontSize: '14px', fontWeight: '700', color: coin.change24h >= 0 ? '#00ff00' : '#ff0000' }}>
                      {coin.change24h >= 0 ? '+' : ''}{coin.change24h.toFixed(2)}%
                    </div>
                  </div>
                </div>

                {/* Omnipotent Score */}
                <div style={{ marginBottom: '12px', background: '#0a0a0a', padding: '10px', borderRadius: '6px' }}>
                  <div style={{ fontSize: '10px', color: '#666', marginBottom: '6px', fontWeight: '600' }}>OMNIPOTENT SCORE</div>
                  <div style={{ display: 'flex', alignItems: 'center', gap: '8px' }}>
                    <div style={{ flex: 1, height: '6px', background: '#222', borderRadius: '3px', overflow: 'hidden' }}>
                      <div style={{ width: `${coin.omnipotentScore}%`, height: '100%', background: coin.omnipotentScore >= 75 ? '#00ff00' : coin.omnipotentScore >= 50 ? '#ffff00' : '#ff0000', transition: 'width 0.3s' }} />
                    </div>
                    <div style={{ fontSize: '16px', fontWeight: '700', color: coin.omnipotentScore >= 75 ? '#00ff00' : coin.omnipotentScore >= 50 ? '#ffff00' : '#ff0000' }}>
                      {coin.omnipotentScore}
                    </div>
                  </div>
                </div>

                {/* Metrics Grid */}
                <div style={{ display: 'grid', gridTemplateColumns: '1fr 1fr', gap: '8px', marginBottom: '12px' }}>
                  <div style={{ background: '#0a0a0a', padding: '8px', borderRadius: '4px' }}>
                    <div style={{ fontSize: '9px', color: '#666', marginBottom: '4px' }}>PHASE</div>
                    <div style={{ fontSize: '10px', fontWeight: '600', color: getPhaseColor(coin.marketPhase) }}>{coin.marketPhase}</div>
                  </div>
                  <div style={{ background: '#0a0a0a', padding: '8px', borderRadius: '4px' }}>
                    <div style={{ fontSize: '9px', color: '#666', marginBottom: '4px' }}>TREND</div>
                    <div style={{ fontSize: '10px', fontWeight: '600', color: coin.trend === 'BULLISH' ? '#00ff00' : coin.trend === 'BEARISH' ? '#ff0000' : '#666' }}>{coin.trend}</div>
                  </div>
                  <div style={{ background: '#0a0a0a', padding: '8px', borderRadius: '4px' }}>
                    <div style={{ fontSize: '9px', color: '#666', marginBottom: '4px' }}>CONFIDENCE</div>
                    <div style={{ fontSize: '12px', fontWeight: '700' }}>{coin.confidence}%</div>
                  </div>
                  <div style={{ background: '#0a0a0a', padding: '8px', borderRadius: '4px' }}>
                    <div style={{ fontSize: '9px', color: '#666', marginBottom: '4px' }}>LIQ RISK</div>
                    <div style={{ fontSize: '12px', fontWeight: '700', color: coin.liquidationRisk > 50 ? '#ff0000' : coin.liquidationRisk > 30 ? '#ffff00' : '#00ff00' }}>{coin.liquidationRisk.toFixed(0)}%</div>
                  </div>
                </div>

                {/* Signal Badge */}
                <div style={{ textAlign: 'center' }}>
                  <div style={{
                    display: 'inline-block',
                    background: getSignalColor(coin.signal),
                    color: '#000',
                    padding: '8px 20px',
                    borderRadius: '6px',
                    fontSize: '12px',
                    fontWeight: '700',
                    letterSpacing: '1px',
                  }}>
                    {coin.signal}
                  </div>
                </div>
              </div>
            ))}
          </div>

          {filteredCorrelations.length === 0 && (
            <div style={{ textAlign: 'center', padding: '60px 20px', color: '#666', background: '#111', borderRadius: '10px', border: '1px solid #333' }}>
              <div style={{ fontSize: '48px', marginBottom: '16px' }}>üîç</div>
              <div style={{ fontSize: '16px' }}>No coins match the selected filters.</div>
            </div>
          )}
        </>
      )}
    </div>
  );
}
